<Window x:Class="Yachts.EditUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yachts"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="EditUsers" Height="220" Width="400" MinHeight="220" MinWidth="400">
    <Grid>
        <DockPanel LastChildFill="False" Background="#FF009FDA">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Логин:" Style="{StaticResource ResourceKey=lognpass}"></Label>
                <TextBox x:Name="txtLogin" Style="{StaticResource ResourceKey=inputLogPass}"></TextBox>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Пароль:" Style="{StaticResource ResourceKey=lognpass}"></Label>
                <TextBox x:Name="txtPassword" Style="{StaticResource ResourceKey=inputLogPass}"></TextBox>
            </StackPanel>
            <Button DockPanel.Dock="Top" Content="Изменить" x:Name="btnEditUser" Click="btnEditUser_Click" Style="{StaticResource ResourceKey=auth}"></Button>
        </DockPanel>
    </Grid>
</Window>
